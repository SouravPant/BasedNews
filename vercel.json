{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "vite build --config vite.config.simple.ts",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/news",
      "schedule": "0 9 * * *"
    }
  ]
}