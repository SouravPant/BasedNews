{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "vite build --config vite.config.simple.ts",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api|farcaster\\.json|icon\\.png|preview\\.png|hero\\.png|screenshot.*\\.png|splash\\.png|og-image\\.png|generate-images\\.html).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/news",
      "schedule": "0 9 * * *"
    }
  ]
}