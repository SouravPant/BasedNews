{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "NODE_ENV=production npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/news",
      "schedule": "0 9 * * *"
    }
  ]
}