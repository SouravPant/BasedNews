{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "vite build",
        "outputDirectory": "dist/public"
      }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cryptocurrencies",
      "dest": "/api/cryptocurrencies.ts"
    },
    {
      "src": "/api/news",
      "dest": "/api/news.ts"
    },
    {
      "src": "/api/reddit",
      "dest": "/api/reddit.ts"
    },
    {
      "src": "/api/status",
      "dest": "/api/status.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "functions": {
    "api/*.ts": {
      "includeFiles": "server/**"
    }
  }
}